<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".CreateNewActivity">

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:hint="Workout Name"
        android:layout_marginBottom="20dp"/>

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />

    <CheckBox
        android:id="@+id/arms1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bicep Curls"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/arms2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hammer Curls"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/arms3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seated Dumbbell Press"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/arms4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skullcrusher"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/arms5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triceps Pushdown"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barbell Row"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chin Up"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/back3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadlift"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cardio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indoor Track"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cardio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treadmill"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cardio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stationary Bike"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/chest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bench Press"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/chest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dumbbell Press"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/chest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incline Bench Press"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/legs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leg Press"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/legs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squats"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/legs3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calf Raises"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/shoulders1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoulder Press"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/shoulders2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barbell Row"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/shoulders3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Side Lateral Raise"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="24sp"
        android:text="DONE"/>

</LinearLayout>