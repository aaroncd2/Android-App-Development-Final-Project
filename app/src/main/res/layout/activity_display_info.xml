<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayInfoActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:columnCount="2">

    <TextView
        android:id="@+id/displayInfoName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="10dp"
        android:text="Workout Information Gallery"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/displayInfoImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnSpan="2"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"/>

    <Spinner
        android:id="@+id/displayInfoSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnSpan="2"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="1"/>

    <ImageView
        android:id="@+id/displayInfoDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnSpan="2"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"/>


</GridLayout>